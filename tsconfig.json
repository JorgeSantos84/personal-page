{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // Ensure base URL is set if using relative paths
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // Adjust paths as needed
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"] // Exclude unwanted directories
}
